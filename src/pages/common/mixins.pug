mixin img-picture (name, first="false", alt="фото")
  -var desktop = "min-width: 1024px";
  -var tablet = "min-width: 660px";
  -var mobile = "min-width: 320px";
    picture.gallery__image
      if first == "true"
        source( media=`(${desktop})` srcset=`img/desktop/photo/${name}-desktop.jpg 1x, img/desktop/photo/${name}-desktop@2x.jpg 2x, img/desktop/photo/${name}-desktop@3x.jpg 3x`)
        source( media=`(${tablet})` srcset=`img/tablet/photo/${name}-tablet.jpg 1x, img/tablet/photo/${name}-tablet@2x.jpg 2x, img/tablet/photo/${name}-tablet@3x.jpg 3x`)
        source( media=`(${mobile})` srcset=`img/mobile/photo/${name}-mobile.jpg 1x, img/mobile/photo/${name}-mobile@2x.jpg 2x, img/mobile/photo/${name}-mobile@3x.jpg 3x`)
        img(src="img/mobile/photo/panorama-mobile.jpg" alt=`${alt}` width="100%")
      else
        source( media=`(${desktop})` srcset=`img/desktop/photo/photo-${name}-desktop.jpg 1x, img/desktop/photo/photo-${name}-desktop@2x.jpg 2x, img/desktop/photo/photo-${name}-desktop@3x.jpg 3x`)
        source( media=`(${tablet})` srcset=`img/tablet/photo/photo-${name}-tablet.jpg 1x, img/tablet/photo/photo-${name}-tablet@2x.jpg 2x, img/tablet/photo/photo-${name}-tablet@3x.jpg 3x`)
        source( media=`(${mobile})` srcset=`img/mobile/photo/photo-${name}-mobile.jpg 1x, img/mobile/photo/photo-${name}-mobile@2x.jpg 2x, img/mobile/photo/photo-${name}-mobile@3x.jpg 3x`)
        img(src=`img/mobile/photo/photo-${name}-mobile.jpg` alt="" width="100%")

